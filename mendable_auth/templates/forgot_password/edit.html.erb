<h1>New Password</h1>

<%= error_messages_for :user %>

<% form_for(@user, :url => forgot_password_reset_url(:c => params[:c], :id => params[:id])) do |f| %>

	<p><label for="user_password">New Password:</label><br />
	<%= f.text_field :password %></p>
	
	<p><%= submit_tag("Save Password") %></p>
<% end %>

