<h1>Listing <%= plural_name %></h1>

<table id="<%= singular_name %>_index">
  <tr>
    <th colspan="2"></th>
<% for attribute in attributes -%>
    <th><%= attribute.column.human_name %></th>
<% end -%>
  </tr>



<%% @<%= plural_name %>.each do |<%= singular_name %>| %>
  <tr class="<%%= cycle(*%w{a b}) %>">
    <td><%%= link_to edit_icon, edit_<%= singular_name %>_path(<%= singular_name %>) %></td>
    <td><%%= link_to destroy_icon, <%= singular_name %>, :confirm => 'Are you sure?', :method => :delete %></td>
<% for attribute in attributes -%>
    <% if attribute == attributes.first then %>
      <td><%%= link_to <%= singular_name %>.<%= attribute.name %>, <%= singular_name %> %></td>
    <% else %>
      <td><%%=h <%= singular_name %>.<%= attribute.name %> %></td>
    <% end %>
<% end -%>
  </tr>
<%% end %>
</table>

<br />

<%%= link_to new_icon + 'New <%= singular_name %>', new_<%= singular_name %>_path %>
